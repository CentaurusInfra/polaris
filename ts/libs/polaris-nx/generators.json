{
    "$schema": "http://json-schema.org/schema",
    "name": "polaris-nx",
    "version": "0.2.0",
    "generators": {
        "slo-mapping-type": {
            "factory": "./src/generators/slo-mapping-type/generator",
            "schema": "./src/generators/slo-mapping-type/schema.json",
            "description": "Create a Polaris SLO Cloud SLO Mapping Type"
        },
        "slo-controller": {
            "factory": "./src/generators/slo-controller/generator",
            "schema": "./src/generators/slo-controller/schema.json",
            "description": "Create an SLO Controller for an existing Polaris SLO Mapping Type"
        },
        "metrics-dashboard": {
            "factory": "./src/generators/metrics-dashboard/generator",
            "schema": "./src/generators/metrics-dashboard/schema.json",
            "description": "Create a metrics dashboard"
        },
        "elasticity-strategy-controller": {
            "factory": "./src/generators/elasticity-strategy-controller/generator",
            "schema": "./src/generators/elasticity-strategy-controller/schema.json",
            "description": "Create a controller for an existing Elasticity Strategy type"
        },
        "elasticity-strategy": {
            "factory": "./src/generators/elasticity-strategy/generator",
            "schema": "./src/generators/elasticity-strategy/schema.json",
            "description": "Create an Elasticity Strategy type"
        },
        "metrics-alert": {
            "factory": "./src/generators/metrics-alert/generator",
            "schema": "./src/generators/metrics-alert/schema.json",
            "description": "Add a metrics alert to dashboard"
        },
        "composed-metric-type": {
            "factory": "./src/generators/composed-metric-type/generator",
            "schema": "./src/generators/composed-metric-type/schema.json",
            "description": "Create a Composed Metric Type"
        }
    }
}
